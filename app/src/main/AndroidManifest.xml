        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.task_type_picker.TaskTypePickerActivity"
            android:label="@string/title_activity_task_type_picker"
            android:parentActivityName=".ui.task_editor.TaskEditorActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bujo_48k_projecjt.ui.task_editor.TaskEditorActivity" />
        </activity>
        <activity
            android:name=".ui.task_editor.TaskEditorActivity"
            android:label="@string/title_activity_task_editor"
